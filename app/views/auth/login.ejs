<%- include('../partials/head_lv2.ejs') %>
<body>
<div>
    <%- include('../partials/header.ejs') %>
    <main>
        <%- include('../partials/navbar.ejs') %>
        <h3><%= title %></h3>
        <% if (messages.length > 0) { %>
            <div>
                <% messages %>
            </div>
        <% } %>
        <form method="post" class="login" autocomplete="off">
            <p>
                <label for="userName">User Name </label>
                <input class="loginInput" type="text" id="userName" name="userName" tabindex="1" required="required" autofocus placeholder="Enter username">
            </p>
            <p>
                <label for="currentPassword">Password </label>
                <input class="loginInput" type="password" id="currentPassword" name="userPassword" tabindex="3" required="required" placeholder="Enter password">
                or
                <a href="/register">Register Here</a>
            </p>
            <p class="loginInputButton">
                <input type="submit" value="Login">
                <a href="/">
                    <input type="button" value="Cancel">
                </a>
            </p>
        </form>
    </main>
    <%- include('../partials/footer.ejs') %>
</div>
</body>
</html>